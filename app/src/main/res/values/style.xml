<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="layout_line_colored" parent="layout_line">
        <item name="android:background">@drawable/custom_layout_shape</item>
        <item name="android:paddingTop">@dimen/txt_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/txt_padding_vertical</item>
        <item name="android:paddingStart">@dimen/txt_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/txt_padding_horizontal</item>
    </style>
</resources>